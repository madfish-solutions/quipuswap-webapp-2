{
  "extends": ["react-app", "plugin:import/errors", "plugin:import/warnings", "plugin:import/typescript", "plugin:sonarjs/recommended"],
  "plugins": ["import", "prettier", "sonarjs"],
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  },
  "rules": {
    "import/no-named-as-default": 0,
    "prettier/prettier": "error",
    "import/order": [
      "error",
      {
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "groups": [["external", "builtin"], "internal", ["parent", "sibling", "index"]],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always"
      }
    ]
  }
}
